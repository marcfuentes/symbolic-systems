<div class="row">
	<div class="span8 offset2">
		<div class="well">
			<%= image_tag @pin.image %>
			<p>
			  <%= simple_format @pin.description %>
			</p>
			<h4>
			  <%= @pin.user.name %>
			</h4>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			
		</div>
	</div>
</div>